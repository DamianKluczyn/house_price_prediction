# Użyj obrazu bazowego Python
FROM python:3.8-slim

# Instalacja dodatkowych pakietów Pythona
RUN pip install pandas faker dask distributed

# Kopiowanie skryptu do kontenera
COPY data_generator.py /opt/dask/scripts/data_generator.py

# Ustawienie punktu wejściowego
ENTRYPOINT ["python", "/opt/dask/scripts/data_generator.py"]
